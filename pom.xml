		<pluginManagement>
			<plugins>
				<!-- This plugin is used in order to fire up an in-memory database that 
					is used for the tests of this project. -->
				<plugin>
					<groupId>com.btmatthews.maven.plugins.inmemdb</groupId>
					<artifactId>inmemdb-maven-plugin</artifactId>
					<version>${version.inmemdb-plugin}</version>
					<inherited>true</inherited>
					<configuration>
						<monitorKey>inmemdb</monitorKey>
						<monitorPort>11527</monitorPort>
					</configuration>
					<executions>
						<execution>
							<id>runDB</id>
							<phase>compile</phase>
							<goals>
								<goal>run</goal>
							</goals>
							<configuration>
								<skip>false</skip>
								<daemon>true</daemon>
								<type>derby</type>
								<database>${dbnam}</database>
								<username>${user}</username>
								<password>${pass}</password>
								<port>1530</port>
								<sources>
									<script>
										<sourceFile>${project.parent.basedir}/create-table.sql</sourceFile>
									</script>
								</sources>
							</configuration>
						</execution>
					</executions>
				</plugin>

				<!-- This plugin is used in order to fire up an Openoffice document server. -->
				<plugin>
					<artifactId>maven-antrun-plugin</artifactId>
					<version>${version.maven-antrun-plugin}</version>
					<inherited>true</inherited>
					<executions>
						<execution>
							<id>RunODFServer</id>
							<phase>none</phase>
							<configuration>
								<target>
									<exec executable="${script.type}" spawn="true">
										<arg value="${script.arg0}" />
										<arg value="${script.oostart}" />
									</exec>
								</target>
							</configuration>
							<goals>
								<goal>run</goal>
							</goals>
						</execution>
						<execution>
							<id>KillODFServer</id>
							<phase>none</phase>
							<configuration>
								<target>
									<exec executable="${script.type}" failonerror="true" logerror="true">
										<arg value="${script.arg0}" />
										<arg value="${script.ooend}" />
									</exec>
								</target>
							</configuration>
							<goals>
								<goal>run</goal>
							</goals>
						</execution>
						<execution>
							<id>wait5</id>
							<phase>none</phase>
							<configuration>
								<target>
									<sleep seconds="5" />
								</target>
							</configuration>
							<goals>
								<goal>run</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>

			<!-- This plugin is used in order to copy the necessary test directories. -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>

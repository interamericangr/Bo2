			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${version.maven-compiler-plugin}</version>
				<configuration>
					<compilerVersion>1.8</compilerVersion>
					<optimize>true</optimize>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<!-- Use the greek locale for tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>${version.maven-surefire-plugin}</version>
				<configuration>
					<argLine>-Dorg.quartz.properties=org/quartz/bo2/quartz.properties -Duser.country=GR -Duser.language=el -Dtarget.environment=DEV ${argLine}</argLine>
					<excludes>
						<exclude>**/TestSuite*.java</exclude>
					</excludes>
					<runOrder>random</runOrder>
				</configuration>
			</plugin>

			<!-- package jar for tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>${version.maven-jar-plugin}</version>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- add samples folder(s) to test sources -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>${version.build-helper-maven-plugin}</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>generated</source>
							</sources>
						</configuration>
					</execution>
					<execution>
						<id>add-test-source</id>
						<phase>generate-test-sources</phase>
						<goals>
							<goal>add-test-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>samples</source>
								<source>samplesTest</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>${version.jacoco-maven-plugin}</version>
				<executions>
					<execution>
						<id>jacoco-initialize</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<execution>
						<id>jacoco-site</id>
						<phase>package</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!-- mutation testing with pit -->
			<plugin>
				<groupId>org.pitest</groupId>
				<artifactId>pitest-maven</artifactId>
				<version>${version.pitest-maven}</version>
				<executions>
					<execution>
						<id>run-pit</id>
						<phase>test</phase>
						<goals>
							<goal>mutationCoverage</goal>
						</goals>
						<configuration>
							<skipTests>${skip.pit}</skipTests>
							<excludedClasses>
								<value>gr.interamerican.bo2.impl.open.runtime.concurrent.TestBatchProcess</value>
							</excludedClasses>
							<outputFormats>
								<value>XML</value>
								<value>HTML</value>
							</outputFormats>
							<threads>1</threads>
							<failWhenNoMutations>false</failWhenNoMutations>
							<jvmArgs>
								<value>-Duser.country=GR</value>
								<value>-Duser.language=el</value>
								<value>-Dtarget.environment=DEV</value>
								<value>-Xmx2048m</value>
								<value>-Dorg.quartz.properties=org/quartz/bo2/quartz.properties</value>
							</jvmArgs>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>gr.interamerican.one</groupId>
						<artifactId>pitExtend</artifactId>
						<version>${version.pitExtend}</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>

	</build>

